# Specify audio target GUI widgets
faustcode:resonanceFrequency=hslider("Resonance Frequency", 30.0, 20.0, 800.0, 4.0);
faustcode:decayTimeOfResonator=hslider("Decay Time of Resonator", 1.0, 0.01, 5.0, 0.01);
faustcode:massOfResonator=hslider("Mass of Resonator", 0.003, 0.0002, 0.01, 0.0002);
faustcode:interactionStiffness=hslider("Touch Interaction Stiffness", 300.0, 50.0, 500.0, 50.0);
faustcode:interactionDamping=hslider("Touch Interaction Damping", 0.01, 0.002, 0.1, 0.002);


faustcode: outputDSP=highpass(4,20.0);
faustcode: vol=0.05*hslider("Ze volume",3000.0,50.0,10000.0,10.0);


# Model itself
resonators(resonanceFrequency, decayTimeOfResonator, massOfResonator),r1;
port( ),dev1;
port( ),dev2;

touch(interactionStiffness,interactionDamping,0.0),tt,r1,dev1;

audioout,aLeft,r1:*(vol):outputDSP;
audioout,aRight,r1:*(vol):outputDSP;
